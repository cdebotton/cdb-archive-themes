{
  "version": 2,
  "builds": [
    { "src": "app/package.json", "use": "@now/next" },
    {
      "src": "graphql/**/*.ts",
      "use": "@now/node@canary",
      "config": {
        "includeFiles": [],
        "maxLambdaSize": "25mb"
      }
    }
  ],
  "build": {
    "env": {
      "POSTGRESQL_URL": "@postgresql-url",
      "JWT_SECRET": "@jwt-secret",
      "TOKEN_KEY": "@token-key"
    }
  }
}
