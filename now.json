{
  "version": 2,
  "builds": [
    {
      "src": "app/package.json",
      "use": "@now/next"
    },
    {
      "src": "api/src/**/*.ts",
      "use": "@now/node@canary",
      "config": { "maxLambdaSize": "25mb" }
    }
  ],
  "routes": [
    { "src": "/graphql", "dest": "/api/src/index.ts" },
    {
      "src": "/(.*)",
      "dest": "/app/$1",
      "headers": {
        "x-request-path": "$1"
      }
    }
  ],
  "build": {
    "env": {
      "POSTGRESQL_URL": "@postgresql-url",
      "JWT_SECRET": "@jwt-secret",
      "TOKEN_KEY": "@token-key"
    }
  }
}
