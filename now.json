{
  "version": 2,
  "builds": [
    {
      "src": "app/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "api/src/**/*.ts",
      "use": "@now/node@canary",
      "config": { "maxLambdaSize": "25mb" }
    }
  ],
  "routes": [
    { "src": "/graphql", "dest": "/api/src/index.ts" },
    { "src": "/(.+)", "dest": "/app/$1" },
    { "src": "/", "dest": "/app/index.html" }
  ],
  "build": {
    "env": {
      "POSTGRESQL_URL": "@postgresql-url"
    }
  },
  "env": {
    "POSTGRESQL_URL": "@postgresql-url",
    "JWT_SECRET": "@jwt-secret",
    "TOKEN_KEY": "@token-key"
  }
}
