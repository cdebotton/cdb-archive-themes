{
  "version": 2,
  "builds": [
    {
      "src": "app/package.json",
      "use": "@now/next"
    },
    {
      "src": "api/src/**/*.ts",
      "use": "@now/node@canary",
      "config": { "maxLambdaSize": "25mb" }
    }
  ],
  "routes": [{ "src": "/graphql", "dest": "/api/src/index.ts" }],
  "build": {
    "env": {
      "POSTGRESQL_URL": "@postgresql-url"
    }
  },
  "env": {
    "POSTGRESQL_URL": "@postgresql-url",
    "JWT_SECRET": "@jwt-secret",
    "TOKEN_KEY": "@token-key",
    "ENGINE_API_KEY": "@engine-api-key",
    "SPACES_KEY": "@spaces-key",
    "SPACES_SECRET": "@spaces-secret",
    "SPACES_ENDPOINT": "@spaces-endpoint",
    "SPACES_SPACE": "@spaces-space"
  },
  "regions": ["iad1", "cle1"]
}
